doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title zoomba
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 zoomBa
        main
            div#welcome
                form
                    input(type="text", required, placeholder="enter the room!")
                    button Enter Room
            div#room
                h3
                ul
                form#name
                    input(placeholder="set a nickname", required, type="text")
                    button set
                form#msg
                    input(placeholder="send a message", required, type="text")
                    button Send
        
        script(src="/socket.io/socket.io.js")
            
        script(src="/public/js/app.js")
            
        